      .state('habits', {
        url: '/habits',
        templateUrl: '<%= asset_path("habits/list.html") %>',
        controller: 'HabitListCtrl'
      })
      .state('habits.detail', {
        url: '/:id',
        templateUrl: '<%= asset_path("habits/detail.html") %>',
        controller: 'HabitDetailCtrl'
      });
}]);
